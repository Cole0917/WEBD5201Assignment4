<div id="<%= dom_id task %>">
  <p>
    <strong>Name:</strong>
    <%= task.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>
  
  <p>
    <strong>Image:</strong>
    <%= image_tag task.image if task.respond_to?(:image) && task.image.attached? %>
  </p>

</div>
